    #overview-users {
        width: 23%;
        border-radius: 10px;
        height: 150px;
        background-color: #5293b0;
        text-align: center;
        padding: 10px;
    }

    /* danh mục sản phẩm */
    .custom-table {
        width: 100%;
        border-collapse: collapse;
    }

    .custom-table th,
    .custom-table td {
