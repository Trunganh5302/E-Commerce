        color: #000;
    }

    /* CSS cho nội dung */
    .content {
        flex-grow: 1;
        padding: 20px;
    }

    /* //// */

    .overview-container {
        display: flex;
    }

    .wrapper_TQ {
        margin-top: 20px;
        display: flex;
        justify-content: space-around;
    }


    .overview-item {
        flex: 1;
        padding: 20px;
        background-color: #f2f2f2;
