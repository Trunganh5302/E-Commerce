    /* CSS cho phần body */
    .body-container {
        display: flex;
        flex-direction: row;
    }

    .sidebar {
        width: 200px;
        background-color: #f5f5f5;
        padding: 20px;
    }

    .sidebar ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .sidebar li {
        margin-bottom: 10px;
    }

    .sidebar-link {
        display: block;
        text-decoration: none;
        color: #333;
        font-weight: bold;
        padding: 10px;
        transition: background-color 0.3s;
    }

    .sidebar-link:hover {
        background-color: #ebebeb;
    }

    .active {
