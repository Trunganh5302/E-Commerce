<body>
    <nav class="nav">
        <div class="search">
            <input type="text" placeholder="Search" />
        </div>
        <div class="notification-icon">
            <i class="fas fa-bell"></i>
        </div>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Chubinbmt02
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="/">Shop</a>
                <a class="dropdown-item" href="/logout">Đăng xuất</a>
            </div>
        </div>
    </nav>

    <!-- //body -->
    <div class="body-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul>
                <li><a href="/admin" class="sidebar-link " data-target="overview">Tổng quan </a></li>
                <li><a href="/admin/cateAdmin" class="sidebar-link active" data-target="category">Quản lí danh mục </a></li>
                <li><a href="/admin/userAdmin" class="sidebar-link" data-target="account">Quản lí tài khoản</a></li>
                <li><a href="/admin/productAdmin" class="sidebar-link" data-target="product">Quản lí sản phẩm</a></li>
                <li><a href="/admin/billAdmin" class="sidebar-link" data-target="cart">Đơn hàng</a></li>
            </ul>
        </div>

        <!-- Nội dung -->
        <div class="content">
            <div id="overview" class="content-item" style="display: none;">
                <h2>Trang tổng quan</h2>
            </div>
            <div id="category" class="content-item">
                <h2>Quản lí danh mục sản phẩm</h2>
                <a href="/admin/cateAdmin/createCate" type="button" class="btn btn-primary" style="margin-bottom: 20px;">Thêm danh mục</a>
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>Mã danh mục</th>
                            <th>Tên danh mục</th>
                            <th>Mô tả</th>
                            <th>Thời gian tạo</th>
                            <th>Ngày cập nhật</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i < dataTable.length; i++) { %>
                            <tr>
                                <td>
                                    <%= dataTable[i].id %>
                                </td>
                                <td>
                                    <%= dataTable[i].nameCategory %>
                                </td>
                                <td>
                                    <%= dataTable[i].Desc %>
                                </td>
                                <td>
                                    <%= dataTable[i].createdAt %>
                                </td>
                                <td>
                                    <%= dataTable[i].updatedAt %>
                                </td>
                                <td>
                                    <a href="/edit-crudCate?id=<%= dataTable[i].id %>" class="action-button">Sửa</a>
                                    <a href="/delete-crudCate?id=<%= dataTable[i].id %>" class="action-button">Xóa</a>
                                </td>
                            </tr>
                            <% } %>
                                <!-- Các dòng dữ liệu khác -->
                    </tbody>
                    <p>Có <%= dataTable.length%> danh mục được tìm thấy</p>
                </table>


            </div>
            <div id="account" class="content-item" style="display: none;">
                <h2>Quản lí tài khoản</h2>
                <p>Nội dung quản lí tài khoản</p>
            </div>
            <div id="product" class="content-item" style="display: none;">
                <h2>Quản lí sản phẩm</h2>
                <p>Nội dung quản lí sản phẩm</p>
            </div>
            <div id="cart" class="content-item" style="display: none;">
                <h2>Quản lí đơn hàng</h2>
                <p>Nội dung quản lí đơn hàng</p>
            </div>
            <!-- Các phần nội dung khác -->
        </div>
    </div>

</body>
<script>
    // Lấy danh sách các liên kết trong sidebar
    const sidebarLinks = document.querySelectorAll('.sidebar-link');

    // Lặp qua từng liên kết và thêm sự kiện click
    sidebarLinks.forEach(link => {
        link.addEventListener('click', (event) => {
            // Loại bỏ lớp 'active' khỏi tất cả các liên kết
            sidebarLinks.forEach(item => item.classList.remove('active'));

            // Thêm lớp 'active' vào liên kết được click
            link.classList.add('active');

            // Lấy dataset 'target' để xác định nội dung tương ứng
            
        });
    });



</script>


