<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang web bán hàng</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
    .bg-image {
        background-color: rgb(169, 199, 199);
    }

    .p-5 {
        height: 400px;
    }

    .category-product-header {
        margin-top: 5rem;
        margin-bottom: 3rem;
        text-align: center;
    }

    .card-columns {
        
        margin: 0 auto;
        /* căn giữa */
        width: 80%;
        /* chiều rộng là 70% */
    }

    .card {
        cursor: pointer;
        height: 7rem;
    }

    .text-center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .shirts {
        height: 500px;
        display: flex;
        justify-content: space-between;
    }
</style>

<body>
    <!-- Start header-->
    <div class="component">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Kid_pear</a>

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">News</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                </ul>

                <div>
                    <a href="/login" className="text-sm font-semibold leading-6 text-gray-900">
                        Log in <span aria-hidden="true">&rarr;</span>
                    </a>

                </div>
            </div>
        </nav>
    </div>
    <!--End banner-->

    <!-- start banner -->
    <div class="p-5 text-center bg-image rounded-3">
        <div class="mask">
            <div class="d-flex justify-content-center align-items-center h-100">
                <div class="text-white">
                    <h1 class="mb-3">Heading</h1>
                    <h4 class="mb-3">Subheading</h4>
                </div>
            </div>
        </div>
    </div>
    <!-- End banner-->

    <!--Start body-->
    <div class="container-fluid">
        <h1 class="category-product-header">Danh mục sản phẩm</h1>
        <div class="card-columns">
            <div class="card bg-primary">
                <div class="card-body text-center">
                    <p class="card-text">Some text inside the first card</p>
                </div>
            </div>
            <div class="card bg-warning">
                <div class="card-body text-center">
                    <p class="card-text">Some text inside the second card</p>
                </div>
            </div>
            <div class="card bg-success">
                <div class="card-body text-center">
                    <p class="card-text">Some text inside the third card</p>
                </div>
            </div>
            <div class="card bg-danger">
                <div class="card-body text-center">
                    <p class="card-text">Some text inside the fourth card</p>
                </div>
            </div>
            <div class="card bg-light">
                <div class="card-body text-center">
                    <p class="card-text">Some text inside the fifth card</p>
                </div>
            </div>
            <div class="card bg-info">
                <div class="card-body text-center">
                    <p class="card-text">Some text inside the sixth card</p>
                </div>
            </div>
        </div>
    </div>

    <h1 class="category-product-header">Quần</h1>
    
    <div class="card-columns shirts">
        <% for(let i=0; i < dataTable.length; i++){
            %> 
            <div class="card" style="width:250px">
                <img class="card-img-top" style="width:100%" src="<%= dataTable[i].imageSrc %>">
                <div class="card-body" style="padding-left: 0px;
                padding-right: 0px;
            ">
                    <h4 class="card-name" style="font-size: inherit;"><%= dataTable[i].name %></h4>
                    <div style="display: flex; justify-content: space-between;">
                        <p class="card-color" style="opacity: 0.8;" ><%= dataTable[i].color %></p>
                        <p class="cart-price" style="color: red;" ><%= dataTable[i].price %> VND</p>
                    </div>
                    <a href="#" style="width: 100%;" class="btn btn-primary stretched-link">Thêm</a>
                </div>
            </div>
            <%
        } %>
    </div>


    <h1 class="category-product-header">Áo</h1>
    
    <div class="card-columns shirts">
        <% for(let i=0; i < dataTable.length; i++){
            %> 
            <div class="card" style="width:250px">
                <img class="card-img-top" style="width:100%" src="<%= dataTable[i].imageSrc %>">
                <div class="card-body" style="padding-left: 0px;
                padding-right: 0px;
            ">
                    <h4 class="card-name" style="font-size: inherit;"><%= dataTable[i].name %></h4>
                    <div style="display: flex; justify-content: space-between;">
                        <p class="card-color" style="opacity: 0.8;" ><%= dataTable[i].color %></p>
                        <p class="cart-price" style="color: red;" ><%= dataTable[i].price %> VND</p>
                    </div>
                    <a href="#" style="width: 100%;" class="btn btn-primary stretched-link">Thêm</a>
                </div>
            </div>
            <%
        } %>
    </div>
    

    <!--End body-->
</body>


</html>